
{% extends "FSPaysBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block fspays_body %}
    <div class="panel-heading">
    <div class="panel-title">
        <div class="row">
            <div class="col-md-6">
                Liste des continent
            </div>

            <div class="col-md-6">
                <a href="{{ path('fs_pays_addcountry') }}" class="btn btn-info pull-right"> Ajouter un Continent</a></div>
        </div>
    </div>

        <div class="panel-body">

            <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example">
                <thead>
                <th>Nom</th>
                <th>Population</th>
                <th>Continent</th>
                <th>Actions</th>
                </thead>
                <tbody>
                {% for pays in ListPays %}
                    <tr class="{% if loop.index is divisibleby(2) %}odd{% else %}even{% endif %}">
                        <td col>{{ pays.nom }}</td>
                        <td>{{ pays.population }}</td>
                        <td>{{ pays.continent.nom }}</td>
                        <td>
                            <a href="{{ path('fs_pays_editcountry',{id : pays.id}) }}"> <p class="fa fa-edit"></p></a>
                            <a href="{{ path('fs_pays_deletecountry',{id : pays.id}) }}"><p class="glyphicon glyphicon-remove"> </p></a>
                        </td>
                    </tr>

                {% else %}
                    <tr>
                        <td>Pas (encore !) pays enregistr√©e</td>
                    </tr>
                {% endfor%}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
